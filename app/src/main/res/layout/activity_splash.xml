<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:quikr="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.quikr.partho.quikrchallenge.SplashActivity">

    <TextView
        android:id="@+id/quickr_car_intro_text"
        android:layout_centerInParent="true"
        android:text="Quikr Cars Hub"
        android:textSize="40sp"
        android:textColor="@color/quikr_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.quikr.partho.quikrchallenge.utils.ui.CustomTextView
        android:id="@+id/quickr_car_intro"
        android:layout_below="@id/quickr_car_intro_text"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:textSize="70sp"
        android:text="@string/fa_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        quikr:fontName="fa.ttf"

        />

</RelativeLayout>
