<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:quikr="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    quikr:cardElevation="4dp"
    android:layout_marginBottom="10dp">

    <LinearLayout
       android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="10">

        <!-- Catalog car image -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/quikr_catalog_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                />

        </LinearLayout>

        <!-- Catalog car details -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/quikr_catalog_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jaguar"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/quikr_title_blue"/>

            </LinearLayout>

            <!-- Catalog car Ratings and Price -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="10">

                <!-- Catalog car Ratings and Price -->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:orientation="horizontal">

                    <com.quikr.partho.quikrchallenge.utils.ui.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        quikr:fontName="fa.ttf"
                        android:textSize="20sp"
                        android:textColor="@color/quikr_ratings_yellow"
                        android:text="@string/fa_star"
                        />

                    <TextView
                        android:id="@+id/quikr_catalog_rating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2.5"
                        android:layout_marginLeft="5dp"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        />

                </LinearLayout>

                <!-- Catalog car Ratings and Price -->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:orientation="horizontal">

                    <com.quikr.partho.quikrchallenge.utils.ui.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        quikr:fontName="fa.ttf"
                        android:textSize="20sp"
                        android:text="@string/fa_rupee"
                        />

                    <TextView
                        android:id="@+id/quikr_catalog_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2.5 L"
                        android:layout_marginLeft="5dp"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>



</android.support.v7.widget.CardView>
